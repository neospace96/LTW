@model SadiShop.Models.LoaiSanPham

@{
    ViewBag.Title = "Xóa Loại Sản Phẩm - SadiShop";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Bạn có chắc chắn xóa loại sản phẩm này?</h3>
<div>
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Loại sản phẩm</h3>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <td>Mã loại sản phẩm</td>
                            <td>@Html.DisplayFor(model => model.MaLoai)</td>
                        </tr>
                        <tr>
                            <td>Tên loại sản phẩm</td>
                            <td>@Html.DisplayFor(model => model.TenLoai)</td>
                        </tr>
                        <tr>
                            <td>Mã Loại cha</td>
                            <td>@Html.DisplayFor(model => model.MaLoaiCha)</td>
                        </tr>
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-warning" /> |
            @Html.ActionLink("Trỏ về", "LoaiSanPham")
        </div>
    }
</div>
