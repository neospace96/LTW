@model IEnumerable<SadiShop.Models.SanPham>

@helper Truncate(string input, int length)
{
    if (input.Length < length)
    {
            @input
    }
    else
    {
            @input.Substring(0, length)<text>...</text>
    }
}

@{
    ViewBag.Title = "SanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    QUẢN LÝ SẢN PHẨM
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li><a href="#">Tables</a></li>
                    <li class="active">Sản phẩm</li>
                </ol>
            </section>
            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title"></h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <table id="example1" class="table table-bordered table-striped" style="text-align:center">
                                    <thead>
                                        <tr>
                                            <th>Hình sản phẩm</th>
                                            <th>Mã SP</th>
                                            <th>Tên sản phẩm</th>
                                            <th>Thông tin sản phẩm</th>
                                            <th>Giá bán</th>
                                            <th>Tùy chọn</th>
                                        </tr>
                                    </thead>
                                    <tbody>
										@foreach (var item in Model) {
											<tr>
												<td><img src="@Url.Content("~/images/hinhsanpham/"+ item.Hinh1)" style="height:10%"/></td>
												<td>@Html.DisplayFor(modelItem => item.MaSanPham)</td>
												<td>@Html.DisplayFor(modelItem => item.TenSanPham)</td>
												<td>@Truncate(item.Thongtin, 50)</td>
												<td>@String.Format("{0:0,0}", item.GiaBan)</td>
                                                <td>
                                                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaSanPham }) |
                                                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSanPham }) |
                                                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaSanPham })
                                                </td>
											</tr>
										}
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Hình sản phẩm</th>
                                            <th>Mã SP</th>
                                            <th>Tên sản phẩm</th>
                                            <th>Thông tin sản phẩm</th>
                                            <th>Giá bán</th>
                                            <th>Tùy chọn</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </section><!-- /.content -->