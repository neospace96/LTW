@model SadiShop.Models.SanPham

<div class="tover_view_page element_fade_in">
    <div class="tover_view_header clearfix">
        <p>Xem nhanh</p>
        <a id="tover_view_page_close" href="javascript:void(0);">Close<i>X</i></a>
    </div>

    <div class="clearfix">
        <div class="tovar_view_fotos clearfix">
            <div id="slider1" class="flexslider">
                <ul class="slides">
                    <li><a href="javascript:void(0);"><img src="~/images/hinhsanpham/@Model.Hinh1" alt="" /></a></li>
                    <li><a href="javascript:void(0);"><img src="~/images/hinhsanpham/@Model.Hinh2" alt="" /></a></li>
                </ul>
            </div>
            <div id="carousel1" class="flexslider">
                <ul class="slides">
                    <li><a href="javascript:void(0);"><img src="~/images/hinhsanpham/@Model.Hinh1" alt="" /></a></li>
                    <li><a href="javascript:void(0);"><img src="~/images/hinhsanpham/@Model.Hinh2" alt="" /></a></li>
                </ul>
            </div>
        </div>

        <div class="tovar_view_description">
            <div class="tovar_view_title">@Model.TenSanPham</div>
            <div class="tovar_article">@Model.MaSanPham</div>
            <div class="clearfix tovar_brend_price">
                <div class="pull-left tovar_brend">@Model.MaNhaSanXuat</div>
                <div class="pull-right tovar_view_price">@String.Format("{0:0,0}", Model.GiaBan) VNĐ</div>
            </div>
            <div class="tovar_size_select">
                <div class="clearfix">
                    <p class="pull-left">Select SIZE</p>
                    <span>Size & Fit</span>
                </div>
                <a class="sizeXS" href="javascript:void(0);">XS</a>
                <a class="sizeS active" href="javascript:void(0);">S</a>
                <a class="sizeM" href="javascript:void(0);">M</a>
                <a class="sizeL" href="javascript:void(0);">L</a>
                <a class="sizeXL" href="javascript:void(0);">XL</a>
                <a class="sizeXXL" href="javascript:void(0);">XXL</a>
                <a class="sizeXXXL" href="javascript:void(0);">XXXL</a>
            </div>
            <div class="tovar_view_btn">
                <a class="add_bag" href="@Url.Action("ThemGioHang","GioHang", new { @sMaSanPham = @Model.MaSanPham, strURL= Request.Url })"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
                <a class="add_lovelist" href="javascript:void(0);"><i class="fa fa-heart"></i></a>
            </div>
        </div>
    </div>
</div>