@model IEnumerable<SadiShop.Models.DonDatHang>

@{
    ViewBag.Title = "LichSuDonHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="preloader_hide">
    <div id="page">
        <!-- BREADCRUMBS -->
        <section class="breadcrumb parallax margbot30"></section>
        <h2 class="center">LỊCH SỬ ĐƠN HÀNG</h2>
        <table class="table table-hover" style="margin-left:20px;margin-right:20px">
            <tr>
                <th>
                    Ngày đặt
                </th>
                <th>
                    Thành Tiền
                </th>
                <th>
                    Tình trạng
                </th>
                <th>Tùy chọn</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDatHang)
                    </td>
                    <td>
                        @String.Format("{0:0,0}", item.ThanhTien) VNĐ
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TinhTrang.TenTinhTrang)
                    </td>
                    <td>
                    Chi Tiết
                    | Hủy đơn hàng</td>
                </tr>
            }

        </table>
        </div>
    </div>
