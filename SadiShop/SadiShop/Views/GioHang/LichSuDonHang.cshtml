@model IEnumerable<SadiShop.Models.DonDatHang>

@{
    ViewBag.Title = "LichSuDonHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="preloader_hide">
    <div id="page">
        <!-- BREADCRUMBS -->
        <section class="breadcrumb parallax margbot30"></section>
        <h1 class="center">LỊCH SỬ ĐƠN HÀNG</h1>
        <table class="table table-hover" style="margin-left:20px;margin-right:20px; font-size: 16px">
            <tr>
                <th>
                    Ngày đặt
                </th>
                <th>
                    Thành Tiền
                </th>
                <th>
                    Tình trạng đơn hàng
                </th>
                <th>Tùy chọn</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr style="font-size: 16px">
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDatHang)
                    </td>
                    <td>
                        @String.Format("{0:0,0}", item.ThanhTien) VNĐ
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TinhTrang.TenTinhTrang)
                    </td>
                    <td>
                    @*<a href="@Url.Action("ChiTietDonHang", "GioHang", new { id = item.MaDonDatHang })">Chi tiết</a>*@
                    @Html.ActionLink("Chi tiết đơn hàng", "ChiTietDonHang", new {id = item.MaDonDatHang }) | 
                        @if (item.MaTinhTrang == 1)
                        {
                           @Html.ActionLink("Hủy đơn hàng", "HuyDonHang", new { id = item.MaDonDatHang })
                        }
                    </td>
                </tr>
            }

        </table>
        </div>
    </div>
